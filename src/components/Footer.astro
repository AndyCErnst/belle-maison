---
import logo from '../images/logo.jpg'
import { Image } from 'astro:assets'
---
<style>
  .footer {
    border-top: 1rem solid var(--primary2);
    border-bottom: 1rem solid var(--primary2);
    background-color: #efefef;
    margin-top: 5rem;
  }
  .footer-blocks {
    display: flex;
    padding-bottom: 1rem;
  }
  @media all and (max-width: 600px) {
    .footer-blocks { 
      flex-direction: column;
      gap: 2rem;
    }
  }
  .footer-block { 
    padding-top: 1rem;
    padding-bottom: 1rem;
    flex-grow: 1;
    flex-basis: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-left: 2rem;
    border-left: 2px solid var(--primary2);
  }
  .footer-block:first-child {
    flex-grow: 0;
    flex-basis: auto;
    margin-right: 2rem;
    border: none;
    padding: 0;
  }
   .footer-logo-image {
    width: 200px;
    height: auto;
   }
