const { img } = Astro.props
---

<style>
  .hero {
    background-size: cover;
    height: min(80vw, 800px);
    background-position: center;
    border-bottom: 1rem solid var(--primary2)
  }
</style>
<!-- annoyingly, using this method requires the consumed to prefix the image url with "src", unclear why -->
<div class="hero nav-height-padding" style={`background-image: url(${img})`}></div>
