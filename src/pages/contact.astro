---
import BaseLayout from '../layouts/BaseLayout.astro'
import MiniBanner from '../components/MiniBanner.astro'
import { Image } from 'astro:assets'
import gina from '../images/gina.jpg'
import ContactInfo from '../components/ContactInfo.astro'
import image from '../images/Moore bathroom 2.webp'

---

<style>
  .contact-container {
    display: flex;
    justify-content: space-between;
  }

  .color-image {
    max-width: 40%;
    height: auto;
    margin: 0 auto;
  }
  .gina-image {
    margin-right: 2rem;
    margin-bottom: 1rem;
    height: 200px;
    width: auto;
  }
  .hello {
    display: flex;
    margin-bottom: 2rem;
  }
  @media all and (max-width: 768px) {
    .contact-container {
      flex-direction: column;
    }
    .color-image {
      max-width: 100%;
      height: 400px;
      object-fit: cover;
    }
  }
</style>
<BaseLayout title="Contact" >
  <MiniBanner title="Contact" />
  <div class="body-width">
    <article class="contact-container content-block">
      <div class="content-block-inner">
        <div class="hello">
          <Image src={gina} alt="Gina Schorr" class="gina-image" />
          <p>
            Please send a message or question and Iâ€™ll get back to you as soon as
            possible.
          </p>
        </div>
        <ContactInfo />
      </div>
      <Image src={image} alt="Spacious bathroom featuring a freestanding white bathtub, dual wooden vanities with white countertops and round mirrors, and modern light fixtures. The room has large windows with ocean views and a light-colored tiled floor. A chandelier hangs from the ceiling." class="color-image" />
    </article>
  </div>
</BaseLayout>
