---
import BaseLayout from '../layouts/BaseLayout.astro'
import MiniBanner from '../components/MiniBanner.astro'
import { Image } from 'astro:assets'
import image from '../images/IMG_9756small.webp'
import gina from '../images/gina.jpg'
import ContactInfo from '../components/ContactInfo.astro'
---

<style>
  .contact-container {
    display: flex;
    gap: 4rem;
  }

  .color-image {
    max-width: 40%;
    height: auto;
    margin: auto;
  }
  .gina-image {
    margin-right: 2rem;
    margin-bottom: 1rem;
    height: 200px;
    width: auto;
  }
  .hello {
    display: flex;
    margin-bottom: 2rem;
  }
  @media all and (max-width: 768px) {
    .contact-container {
      flex-direction: column;
    }
    .color-image {
      max-width: 100%;
      height: 400px;
      object-fit: cover;
    }
  }
</style>
<BaseLayout>
  <MiniBanner title="Contact" />
  <article class="contact-container body-width">
    <!-- <p>
    Please leave your contact info and a message or question and I’ll contact you as soon
    as possible.
  </p> -->
    <div>
      <div class="hello">
        <Image src={gina} alt="Gina Schorr" class="gina-image" />
        <p>
          Please send a message or question and I’ll get back to you as soon as possible.
        </p>
      </div>
      <ContactInfo />
    </div>
    <Image src={image} alt="" class="color-image" />
  </article>
</BaseLayout>
