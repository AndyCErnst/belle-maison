  { img: Img21, id: 21, alt: '', horz: true, title: '' },
  { img: Img22, id: 22, alt: '', horz: false, title: '' },
  { img: Img23, id: 23, alt: '', horz: true, title: '' },
  { img: Img2, id: 2, alt: '', horz: true, title: 'Corporate' },
  { img: Img3, id: 3, alt: '', horz: false, title: '' },
  { img: Img4, id: 4, alt: '', horz: false, title: '' },
]
---

<style>
  .images {
    display: flex;
    column-gap: 2rem;
    row-gap: 4rem;
    flex-wrap: wrap;
    max-width: 1200px;
    margin: auto;
    padding: 0 16px;
  }
  .image-container {
    position: relative;
    margin-bottom: -6px;
    flex-basis: 32%;
  }
  .image {
    object-fit: cover;
    height: 400px;
  }
  @media all and (max-width: 1000px) {
    .image-container {
      flex-basis: 48%;
    }
    .image {
      height: 350px;
    }
  }
  @media all and (max-width: 768px) {
    .image-container {
      flex-basis: 100%;
    }
  }
  .descriptor-text {
    margin-top: 0.5rem;
    font-weight: 300;
  }

  /* temporary, to help troubleshooting */
  .image-container:hover .indicator {
    display: block;
  }
  .indicator {
    position: absolute;
    background-color: rgb(222, 222, 222);
    padding: 10px;
    margin: 5px;
    display: none;
    font-size: 3rem;
  }
    /* .horz {
    height: 300px;
    width: 500px;
  }
  .vert {
    height: 300px;
    width: 300px;
  } */
</style>
<BaseLayout>
  <MiniBanner title="Portfolio" />
  <article>
    <div class="images">
      {
        images.map(({img, id, alt, horz, title}) => {
          return (
            <div class="image-container">
              <div class="indicator">{id}</div>
              <a data-fslightbox href={img.src}>
                <Image
                  src={img}
                  alt={alt}
                  class={'image ' + (horz ? 'horz' : 'vert')}
                />
              </a>
                <div class="descriptor-text h5">{title}</div>
            </div>
          )
        })
      }
    </div>
  </article>
  <script>
    import 'fslightbox'
  </script>
</BaseLayout>
