---

<style>
  .images {
    display: flex;
    gap: 2rem;
    flex-wrap: wrap;
    max-width: 1200px;
    margin: auto;
    padding: 0 16px;
  }
  .image-container {
    position: relative;
    margin-bottom: -6px;
    flex-basis: 32%;
  }
  .image {
    object-fit: cover;
    height: 400px;
  }
  @media all and (max-width: 1000px) {
    .image-container {
      flex-basis: 48%;
    }
    .image {
      height: 350px;
    }
  }
  @media all and (max-width: 768px) {
    .image-container {
      flex-basis: 100%;
    }
  }
  /* .horz {
    height: 300px;
    width: 500px;
  }
  .vert {
    height: 300px;
    width: 300px;
  } */
  .image-container:hover .indicator { 
    display: block;
  }

  .indicator {
    position: absolute;
    background-color: rgb(222, 222, 222);
    padding: 10px;
    margin: 5px;
    display: none;
    font-size: 3rem;
  }
</style>
<BaseLayout>
  <MiniBanner title="Portfolio" />
  <article>
    <div class="images">
      {
        images.map((img) => {
          return (
            <div class="image-container">
              <div class="indicator">{img.id}</div>
              <Image
                src={img.src}
                alt={img.alt}
                class={'image ' + (img.horz ? 'horz' : 'vert')}
              />
            </div>
          )
        })
      }
    </div>
  </article>
</BaseLayout>
